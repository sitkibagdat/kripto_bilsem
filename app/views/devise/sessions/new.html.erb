<h2>Giriş Yap</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, label: 'E-posta Adresi', autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, label: 'Parola', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, label: 'Beni Hatırla' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Oturum Aç" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
