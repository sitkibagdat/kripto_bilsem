<% if @document && @document.published? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Ulaşmaya Çalıştığınız Şifreli Veri <br><small>(Sadece örnek amaçlı gösterilmektedir. Gerçek uygulamada bu alana erişim olmayacaktır.)</small></h3>
    </div>
    <div class="panel-body">
      <%= @document.encrypted_data %>
    </div>
    <div class="panel-footer">
      <%= render 'form' %>    
    </div>
  </div>
<% else %>
  <p>Nope! I can't find your secret document!</p>
<% end %>
